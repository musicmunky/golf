<h3>Golf Courses</h3>

<table class="table">
	<thead>
		<tr>
			<th>Name</th>
			<th>City</th>
			<th>State</th>
			<th>Course Type</th>
			<th></th>
			<% if !current_user.nil? and current_user.has_role? :admin %>
			<th colspan="3">Admin Options</th>
			<% end %>
		</tr>
	</thead>

	<tbody>
    <% @courses.each do |course| %>
		<tr>
			<td><%= course.name %></td>
			<td><%= course.city %></td>
			<td><%= course.state %></td>
			<td><%= course.course_type.name %></td>
			<td><%= link_to "Course Info", course %></td>
			<% if !current_user.nil? and current_user.has_role? :admin %>
				<td><a href="javascript:void(0)" id="add_edit_holes_link-<%= course.id %>" data-toggle="modal" data-target="#add_edit_course_hole_modal">Add/Edit Holes</a></td>
				<td><%= link_to 'Edit', edit_course_path(course) %></td>
				<td><%= link_to 'Delete', course, method: :delete, data: { confirm: 'Are you sure?' } %></td>
			<% end %>
		</tr>
    <% end %>
	</tbody>
</table>

<% if !current_user.nil? and current_user.has_role? :admin %>
	<%= link_to 'New Course', new_course_path, class: "btn btn-success" %>
<% end %>