<%= form_for(@course) do |f| %>
	<% if @course.errors.any? %>
	<div id="error_explanation">
		<h2><%= pluralize(@course.errors.count, "error") %> prohibited this course from being saved:</h2>
		<ul>
		<% @course.errors.full_messages.each do |message| %>
			<li><%= message %></li>
		<% end %>
		</ul>
	</div>
<% end %>

<div class="w100fl">
	<div class="form-group field">
		<%= f.label :name %><br>
		<%= f.text_field :name, class: "form-control", style: "width:100%;" %>
	</div>
</div>

<div class="w100fl">
	<div class="form-group field">
		<%= f.label :address1 %><br>
		<%= f.text_field :address1, class: "form-control", style: "width:100%;" %>
	</div>
</div>

<div class="w100fl">
	<div class="form-group field">
		<%= f.label :address2 %><br>
		<%= f.text_field :address2, class: "form-control", style: "width:100%;" %>
	</div>
</div>

<div class="w100fl">
	<div class="form-group field">
		<%= f.label :address3 %><br>
		<%= f.text_field :address3, class: "form-control", style: "width:100%;" %>
	</div>
</div>

<div class="w100fl">
	<div class="form-group field">
		<%= f.label :city %><br>
		<%= f.text_field :city, class: "form-control", style: "width:100%;" %>
	</div>
</div>
<div class="w100fl">
	<div class="form-group field">
		<%= f.label :state %><br>
		<%#= f.text_field :state, class: "form-control" %>
		<%= render partial: "shared/state_select", locals: {name: "course[state]", id: "course_state", cssclass: "form-control", cssstyle: "width:50%;"} %>
	</div>
	<div class="form-group field">
		<%= f.label :zip %><br>
		<%= f.text_field :zip, class: "form-control" %>
	</div>
</div>
<div class="w100fl">
	<div class="form-group field">
		<%= f.label :course_type_id, "Course Type" %><br>
		<select name="course[course_type_id]" id="course_course_type_id" class="form-control" style="width:50%;">
			<option value="" selected>Course Type</option>
			<% CourseType.all.each do |type| %>
				<option value="<%= type.id %>"><%= type.name %></option>
			<% end %>
		</select>
	</div>
</div>

<div class="actions" style="margin-top:20px;margin-bottom:30px;width:50%;float:left;">
	<%= f.submit "Add New Course", class: "btn btn-success" %>
</div>
<% end %>
