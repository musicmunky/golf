<h3>Sign up</h3>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

	<div class="w100fl">
		<div class="form-group field">
			<%= f.label :first_name, "First Name<span style='color:red;'> *</span>".html_safe %><br />
			<%= f.text_field :first_name, autofocus: true %>
		</div>

		<div class="form-group field">
			<%= f.label :last_name, "Last Name<span style='color:red;'> *</span>".html_safe %><br />
			<%= f.text_field :last_name %>
		</div>
	</div>
	<div class="w100fl">
		<div class="form-group field">
			<%= f.label :email, "Email Address<span style='color:red;'> *</span>".html_safe %><br />
			<%= f.email_field :email %>
		</div>
	</div>
	<div class="form-group field">
		<%= f.label :password, "Password<span style='color:red;'> *</span>".html_safe %>
		<% if @minimum_password_length %>
			<em>(<%= @minimum_password_length %> characters minimum)</em>
		<% end %><br />
		<%= f.password_field :password, autocomplete: "off" %>
	</div>

	<div class="form-group field">
		<%= f.label :password_confirmation, "Confirm Password<span style='color:red;'> *</span>".html_safe %><br />
		<%= f.password_field :password_confirmation, autocomplete: "off" %>
	</div>

	<div class="actions">
		<%= f.submit "Sign up", class: "btn btn-success" %>
	</div>

<% end %>

<%= render "devise/shared/links" %>
